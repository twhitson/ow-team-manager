<div ng-app="TeamModule" ng-controller="TeamController" ng-init="loadTeams()" ng-cloak>
    
    <div class="row">
        <div class="col-md-6">
            <h1>Teams</h1>
        </div>
        <div class="col-md-6 text-right" style="padding-top:20px;">
            <form class="form-inline" ng-submit="submitCreateTeamForm()" name="createteam">
                <div class="form-group" ng-class="{'has-error':createteam.name.$invalid && createteam.name.$dirty}">
                    <input type="text" class="form-control" name="name" ng-model="createteamForm.name" ng-maxlength="50" required>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" ng-disabled="createteam.$invalid">
                        <span ng-show="!createteamForm.loading">Create</span>
                        <span class="fa fa-spinner fa-spin" ng-show="createteamForm.loading"></span>
                        <span ng-show="createteamForm.loading">Processing...</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
    
     <form class="form-inline text-center" style="padding-bottom: 25px;">
        <div class="form-group">
            <input type="text" class="form-control" ng-model="search.name" placeholder="Search...">
        </div>
    </form>
    
    <div class="row">
        <div ng-repeat="model in teams | orderBy:'name' | filter:search">
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <a href="/team/view/{{model.id}}" class="pull-right"><i class="fa fa-pencil"></i></a>
                            {{model.name}}
                        </div>
                    </div>
                    <div class="panel-body">
                        <div ng-repeat="member in model.teammembers">
                            <a href="#"><span ng-bind="member.battletag"></span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>