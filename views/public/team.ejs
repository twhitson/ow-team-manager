<div ng-app="TeamModule" ng-controller="TeamController" ng-init="loadTeam(<%= id %>)" ng-cloak>
    
    <ul class="breadcrumb">
        <li><a href="/public/teams">Teams</a></li>
        <li class="active">{{team.name}}</li>
    </ul>
    
    <h1>{{team.name}}</h1>
    
    <h2>Members</h2>
    
    <div class="panel panel-default">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th width="15%">Battletag</th>
                    <th width="15%">Rank</th>
                    <th colspan="3">Most Played</th>
                    <th width="15%">Average K/D</th>
                    <th width="5%">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="member in team.teammembers | orderBy:'-profile.competitive.rank'">
                    <td>{{member.battletag}}</td>
                    <td>
                        <img src="{{member.profile.competitive.rank_img}}" ng-show="member.profile != null" height="24" width="24">
                        {{member.profile.competitive.rank}}
                        <span class="fa fa-spinner fa-spin" ng-show="member.profile == null"></span>
                    </td>
                    <td>
                        <div ng-repeat="hero in member.heroes | orderBy:percentage | limitTo:1">
                            <img src="{{hero.image}}" ng-show="member.heroes != null" class="img-circle" height="24" width="24">
                            {{hero.name}}
                        </div>
                        <span class="fa fa-spinner fa-spin" ng-show="member.heroes == null"></span>
                    </td>
                    <td>
                        <div ng-repeat="hero in member.heroes | orderBy:percentage | limitTo:2" ng-if="$index > 0">
                            <img src="{{hero.image}}" ng-show="member.heroes != null" class="img-circle" height="24" width="24">
                            {{hero.name}}
                        </div>
                        <span class="fa fa-spinner fa-spin" ng-show="member.heroes == null"></span>
                    </td>
                    <td>
                        <div ng-repeat="hero in member.heroes | orderBy:percentage | limitTo:3" ng-if="$index > 1">
                            <img src="{{hero.image}}" ng-show="member.heroes != null" class="img-circle" height="24" width="24">
                            {{hero.name}}
                        </div>
                        <span class="fa fa-spinner fa-spin" ng-show="member.heroes == null"></span>
                    </td>
                    <td>
                        {{(parseFloat(member.allheroes['Eliminations-Average']) / parseFloat(member.allheroes['Deaths-Average']))| number:2}}
                        <span class="fa fa-spinner fa-spin" ng-show="member.allheroes == null"></span>
                    </td>
                </tr>
            </tbody>
            <tbody>
        </table>
    </div>
    
    <h2>Averages</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            Stuff
        </div>
    </div>
    
</div>